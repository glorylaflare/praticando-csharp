@{
    ViewData["Title"] = "Home Page";
}

<div class="position-relative text-white text-center" style="height: 500px;">
    <img src="https://blog.sothebysrealty.co.uk/hubfs/Cabin-jpg.jpeg" 
         class="w-100 h-100 object-fit-cover" alt="EasyHome Cover Image" style="object-fit: cover;">
    <div class="position-absolute top-50 start-50 translate-middle">
        <h1 class="display-2">Welcome to <b class="fw-bold">EasyHome</b></h1>
        <p class="lead">Find the perfect vacation rental, fast and easy.</p>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center">
            <h2>About EasyHome</h2>
            <p class="mt-3">
                EasyHome is a modern platform that connects travelers with unique and comfortable vacation homes.
                Our mission is to simplify the rental experience and offer memorable stays anywhere.
            </p>
            <a href="#" class="btn btn-outline-primary mt-3">Learn More</a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h3>Why choose EasyHome?</h3>
            <ul class="list-unstyled mt-4 text-start d-inline-block">
                <li class="mb-2">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Secure and easy booking process
                </li>
                <li class="mb-2">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Verified and trusted property listings
                </li>
                <li class="mb-2">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Transparent pricing and no hidden fees
                </li>
                <li class="mb-2">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Dedicated customer support
                </li>
                <li class="mb-2">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Wide variety of homes to suit your trip
                </li>
            </ul>
        </div>
    </div>
</div>