@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container-fluid d-flex flex-column justify-content-center w-75 mt-4">
    <button class="btn btn-outline-secondary" style="width:2.5em;" onclick="window.location.href='/Login/Index'">
        <i class="bi bi-chevron-left"></i>
    </button>
    <h2 class="fw-bold pb-4 mt-4">Hello! Register to get started</h2>
    <div class="d-flex flex-column gap-3 w-100">
        <input type="text" class="form-control" placeholder="Enter username" aria-label="Username" aria-describedby="basic-addon1"/>
        <input type="text" class="form-control" placeholder="Enter email" aria-label="email" aria-describedby="basic-addon1"/>
        <div class="input-group position-relative">
            <input type="password" class="form-control pr-5" id="passwordInput" placeholder="Enter password" aria-label="Password"/>
            <span class="position-absolute top-50 end-0 translate-middle-y pe-3" style="cursor:pointer; z-index:2;" onclick="togglePasswordVisibilityById('passwordInput', 'toggleIcon')">
                <i id="toggleIcon" class="bi bi-eye"></i>
            </span>
        </div>
        <div class="input-group position-relative">
            <input type="password" class="form-control pr-5" id="confirmPasswordInput" placeholder="Confirm password" aria-label="Confirm Password"/>
            <span class="position-absolute top-50 end-0 translate-middle-y pe-3" style="cursor:pointer; z-index:2;" onclick="togglePasswordVisibilityById('confirmPasswordInput', 'toggleConfirmIcon')">
                <i id="toggleConfirmIcon" class="bi bi-eye"></i>
            </span>
        </div>
        <button type="button" class="btn btn-primary" onclick="createAnUser()">Register</button>
        <span class="text-center">
            Or Register with
        </span>
        <div class="d-flex justify-content-center gap-3 mb-5">
            <button type="button" class="btn btn-outline-primary btn-lg w-100" style="width:60px; height:60px;">
                <i class="bi bi-google fs-3"></i>
            </button>
            <button type="button" class="btn btn-outline-primary btn-lg w-100" style="width:60px; height:60px;">
                <i class="bi bi-facebook fs-3"></i>
            </button>
            <button type="button" class="btn btn-outline-primary btn-lg w-100" style="width:60px; height:60px;">
                <i class="bi bi-apple fs-3"></i>
            </button>
        </div>
    </div>
</div> 

<script src="js/site.js"></script>